generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // SQLite usa um arquivo local
}


model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("A Fazer") // "A Fazer", "Em Andamento", "Concluída"
  priority    String   @default("Média")   // "Alta", "Média", "Baixa"
  isFavorited Boolean  @default(false)
  createdAt   DateTime @default(now())
}