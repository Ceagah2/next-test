generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // SQLite usa um arquivo local
}


model Task {
  id          String     @id @default(auto()) @map("uuid")
  title       String
  description String?
  priority    String
  status      String
  subtasks    Subtask[]  @relation("TaskToSubtask")
}

model Subtask {
  id        String  @id @default(auto()) @map("uuid")
  title     String
  completed Boolean @default(false)
  taskId    String
  task      Task    @relation("TaskToSubtask", fields: [taskId], references: [id])
}
